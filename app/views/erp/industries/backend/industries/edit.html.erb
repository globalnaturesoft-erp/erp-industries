<% content_for :title do %>
    <%= @industry.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_industries.backend_industries_path %>">
    <i class="fa fa-industry"></i> <%= t('.industries') %>
    </a> / <%= @industry.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_industries.new_backend_industry_path
    }) %>
<% end %>

<div class="row">
    <div class="col-md-6">
        <% if @industry.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', industry: @industry %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>